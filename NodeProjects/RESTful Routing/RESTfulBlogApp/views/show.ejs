<% include ./partials/header %>

    <div class="ui main container segment">
        <div class="ui huge header aligned"><h1 class="topHeading"><%=blog.title %></h1></div>
        <h2 class="shortHeading"><%=blog.shortIntro %></h2>
        <div class="ui top attached">
            <div class="item">
                <img class="ui image" src="<%= blog.image %>">
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%-blog.body %></p>
                </div>
                <a class="ui green basic button" href="/blogs/<%= blog._id%>/edit">Edit</a>
                <form id="deleteForm" action="/blogs/<%= blog._id%>?_method=DELETE" method="post">
                    <button class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>
        
    </div>

    <% include ./partials/footer %>